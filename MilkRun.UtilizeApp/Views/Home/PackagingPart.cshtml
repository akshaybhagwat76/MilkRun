@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Common;

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="" style="margin-top:50px;">
    <a class="btn btn-success" href="@Url.Action("Add","Home")"> Add </a><br /><br />
    <form>
        <table id="dtbl" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Part_No</th>
                    <th>APROS_Part_No</th>
                    <th>Part_Name</th>
                    <th>Supplier_Code</th>
                    <th>SUPPLIER_NAME</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    @*<th>Packaging_Type</th>*@
                </tr>

            </thead>
            <tbody>
                @foreach (var item in ViewBag.lstPackagingPart)
                {
                    <tr>
                        <td>@item.Part_No</td>
                        <td>@item.APROS_Part_No</td>
                        <td>@item.Part_Name</td>
                        <td>@item.Supplier_Code</td>
                        <td>@item.SUPPLIER_NAME</td>
                        <td>
                            <a class="btn btn-primary" href="/Home/Edit/@item.Part_No">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Home/Delete/@item.Part_No">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <br />
       <div>
            @Html.PagedListPager((IPagedList)ViewBag.lstPackagingPart, currentPageIndex => Url.Action("PackagingPart","Home", new { currentPageIndex }))

       </div>

      
    </form>
</div>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/vendor/jquery.js"></script>
<link href="~/css/pagination/pagedlist.css" rel="stylesheet" />
